        function chkStringPalindrome() {
            var isPalindrome = true;
            var resultMsg = document.getElementById("resultMsg");
            var strElement = document.getElementById("getStr");
            var str = "";
            if (strElement != null) {
                str = strElement.value;
                var strLength = str.length;
                var mid = strLength / 2;
                for (i = 0; i < mid; i++) {
                    if (str.charAt(i) != str.charAt(strLength - i - 1)) {
                        isPalindrome = false;
                        break;
                    }
                }
            }
            if (isPalindrome) {
                resultMsg.innerHTML = str + "\ is a Palindrome";
            } else {
                resultMsg.innerHTML = str + "\ is not a Palindrome";
            }
        }

        

        function iterator() {
            var value1 = Number(document.getElementById("one").value);
            var value2 = Number(document.getElementById("two").value);
            var result = "";

            for (i = 1; i <= 100; i++) {

                // if the number is divisible by both values, write "FizzBuzz"
                if (i % value1 === 0 && i % value2 === 0) {
                    result += "FizzBuzz ";
                }

                // if the number is divisible by first value, write "Fizz"
                else if (i % value1 === 0) {
                    result += "Fizz ";
                }

                // if the number is divisible by second vaule, write "Buzz"
                else if (i % value2 === 0) {
                    result += "Buzz ";

                }

                else {
                    result += i + " ";
                }
            }
            document.getElementById("iteratorResult").innerHTML = result;
        }
        

